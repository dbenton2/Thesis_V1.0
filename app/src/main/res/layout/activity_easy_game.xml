<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_easy_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.daniel.thesis_v10.easyGameActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:id="@+id/Euchre"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScoreBoard"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Trump"
        android:textSize="20sp"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continue_button"
        android:text="Continue"
        android:layout_toRightOf="@+id/linear"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:visibility="invisible"
        android:onClick="clickContinueButton"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linear"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/p1_c1"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/p1_c2"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p1_c2"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/p1_c3"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p1_c3"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p1_c4"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/p1_c3"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p1_c5"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/p1_c4"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/opp1_hand"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/p2_c1"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/p1_c2"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_horizontal_card_back"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p2_c2"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/p1_c3"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_horizontal_card_back"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p2_c3"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_horizontal_card_back"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p2_c4"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/p1_c3"
            android:background="@drawable/ic_horizontal_card_back"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p2_c5"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/p1_c4"
            android:background="@drawable/ic_horizontal_card_back"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/opp2_hand"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/p4_c1"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/p1_c2"
            android:background="@drawable/ic_horizontal_card_back"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p4_c2"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/p1_c3"
            android:background="@drawable/ic_horizontal_card_back"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p4_c3"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_horizontal_card_back"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p4_c4"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/p1_c3"
            android:background="@drawable/ic_horizontal_card_back"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p4_c5"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/p1_c4"
            android:background="@drawable/ic_horizontal_card_back"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/teamMate_hand"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/Euchre">

        <ImageView
            android:id="@+id/p3_c1"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/p1_c2"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_vertical_card_back"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p3_c2"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/p1_c3"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_vertical_card_back"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p3_c3"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_vertical_card_back"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p3_c4"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/p1_c3"
            android:background="@drawable/ic_vertical_card_back"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>

        <ImageView
            android:id="@+id/p3_c5"
            android:layout_width="69dp"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/p1_c4"
            android:background="@drawable/ic_vertical_card_back"
            android:scaleType="centerCrop"
            android:saveEnabled="true"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/pick_up_card"
        android:layout_width="69dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Trump"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/player_played_card"
        android:layout_width="69dp"
        android:layout_height="100dp"
        android:layout_below="@+id/center_box"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/opp1_played_card"
        android:layout_width="100dp"
        android:layout_height="69dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/center_box"/>

    <ImageView
        android:id="@+id/opp2_played_card"
        android:layout_width="100dp"
        android:layout_height="69dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/center_box"/>

    <ImageView
        android:id="@+id/teamMate_played_card"
        android:layout_width="69dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_above="@+id/center_box"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/center_box"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/winLoseText"
        android:saveEnabled="false"
        android:background="@color/colorAccent"
        android:textSize="40sp"/>

</RelativeLayout>
